<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox fx:id="rootPane" alignment="CENTER" prefHeight="1000.0" prefWidth="1185.0" style="-fx-background-size: cover; -fx-background-image: url(&quot;file:src/main/resources/images/loginbackground.jpg&quot;);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
   <children>
      <StackPane prefHeight="150.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
         <children>
            <Pane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: rgba(255,255,255,0.65);" StackPane.alignment="CENTER" />
            <VBox alignment="CENTER" maxHeight="433.0" maxWidth="400.0" prefHeight="433.0" prefWidth="820.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 3);">
               <children>
                  <HBox alignment="CENTER" prefHeight="38.0" prefWidth="208.0">
                     <children>
                        <BorderPane prefHeight="38.0" prefWidth="244.0" HBox.hgrow="ALWAYS">
                           <center>
                              <Label alignment="CENTER" prefHeight="38.0" prefWidth="236.0" text="Login" BorderPane.alignment="CENTER">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Label>
                           </center>
                        </BorderPane>
                     </children>
                  </HBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
                     <children>
                        <HBox alignment="CENTER" maxWidth="300.0" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                           <children>
                              <VBox alignment="CENTER" prefHeight="100.0" prefWidth="252.0" spacing="10.0">
                                 <children>
                                    <Label maxWidth="1.7976931348623157E308" prefHeight="18.0" prefWidth="237.0" text="Username">
                                       <padding>
                                          <Insets left="5.0" />
                                       </padding>
                                    </Label>
                                    <TextField fx:id="usernameField" alignment="CENTER" maxWidth="300.0" minHeight="30.0" prefWidth="204.0" />
                                    <Label maxWidth="1.7976931348623157E308" prefHeight="18.0" prefWidth="247.0" text="Password">
                                       <padding>
                                          <Insets left="5.0" />
                                       </padding>
                                    </Label>
                                    <TextField fx:id="passwordField" accessibleRole="PASSWORD_FIELD" alignment="CENTER" maxWidth="300.0" minHeight="30.0" stylesheets="@../css/sales-manager.css" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="75.0" prefWidth="220.0">
                           <children>
                              <Button fx:id="loginButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleLoginButtonClick" prefHeight="30.0" prefWidth="111.0" styleClass="btn-primary" stylesheets="@../css/sales-manager.css" text="Login" textAlignment="CENTER" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </StackPane>
   </children>
</HBox>
