<AnchorPane fx:id="inventoryUpdateReqPane" prefHeight="950.0" prefWidth="1400.0" style="-fx-background-color: linear-gradient(to bottom right, #F0F7FF, #E6F0FF);" stylesheets="@../css/Inventory.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.InventoryController.InventoryUpdateRequestController">
