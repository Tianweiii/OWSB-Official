                <children>
                    <Label text="Sales Item Request" textFill="#2563EB">
                        <font>
                            <Font name="System Bold" size="28.0" />
                        </font>
                    </Label>
                    <Label fx:id="txtNumSalesRequest" alignment="CENTER" text="pending sales item request" textFill="#64748B">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                </children>
            </VBox>
        </Pane>

