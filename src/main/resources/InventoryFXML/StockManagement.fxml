<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="stockManagementPane" stylesheets="@../css/Inventory.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.InventoryController.StockManagementController">
    <children>
        <VBox prefHeight="1100.0" prefWidth="1400.0" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom right, #F0F7FF, #E6F0FF);" stylesheets="@../css/Inventory.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <!-- Header section -->
                <VBox layoutX="32.0" layoutY="38.0" prefHeight="102.0" prefWidth="1325.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 3);">
                    <children>
                        <HBox alignment="CENTER_LEFT" layoutX="24.0" layoutY="16.0" spacing="20">
                            <children>
                                <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../Assets/icon/Box.png" />
                                    </image>
                                </ImageView>
                                <VBox spacing="2">
                                    <children>
                                        <Label text="Stock Management" textFill="#2563EB">
                                            <font>
                                                <Font name="System Bold" size="32.0" />
                                            </font>
                                        </Label>
                                        <Label text="Track and manage your inventory items" textFill="#64748B">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="30.0" top="20.0" />
                    </padding>
                </VBox>

                <!-- Search and Filter section -->
                <VBox layoutX="32.0" layoutY="159.0" prefHeight="130.0" prefWidth="1325.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 3);">
                    <children>
                        <VBox layoutX="24.0" layoutY="18.0" spacing="10">
                            <children>
                                <Label text="Search and Filter" textFill="#334155">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <HBox spacing="10.0">
                                            <children>
                                                <VBox spacing="5">
                                                    <children>
                                                        <Label text="Filter by" textFill="#64748B">
                                                            <font>
                                                                <Font size="14.0" />
                                                            </font>
                                                        </Label>
                                                        <ComboBox fx:id="filterSelection" prefHeight="40.0" prefWidth="180.0" promptText="All" style="-fx-background-color: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-color: #CBD5E1; -fx-border-width: 1;" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="5">
                                                    <children>
                                                        <Label text="Search" textFill="#64748B">
                                                            <font>
                                                                <Font size="14.0" />
                                                            </font>
                                                        </Label>
                                                        <HBox spacing="10">
                                                            <children>
                                                                <TextField fx:id="txtSearchKeyword" prefHeight="40.0" prefWidth="400.0" promptText="Search for item or supplier name..." style="-fx-border-color: #CBD5E1; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-width: 1;" />
                                                                <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#onSearchButtonClicked" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #2563EB; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 1);" text="Search" textFill="WHITE">
                                                                    <font>
                                                                        <Font name="System Bold" size="14.0" />
                                                                    </font>
                                                                </Button>
                                                                <Button fx:id="btnClear" mnemonicParsing="false" onAction="#onClearButtonClicked" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #F1F5F9; -fx-background-radius: 8; -fx-border-color: #CBD5E1; -fx-border-radius: 8; -fx-border-width: 1; -fx-cursor: hand;" text="Clear" textFill="#475569">
                                                                    <font>
                                                                        <Font size="14.0" />
                                                                    </font>
                                                                </Button>
                                                            </children>
                                                        </HBox>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </HBox>
                                        <Region prefHeight="63.0" prefWidth="245.0" HBox.hgrow="ALWAYS" />
                                        <VBox alignment="BOTTOM_CENTER" prefHeight="63.0" prefWidth="180.0">
                                            <children>
                                                <Button fx:id="btnExport" mnemonicParsing="false" onAction="#onExportButtonClicked" prefHeight="40.0" prefWidth="129.0" style="-fx-background-color: #3B82F6; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 1);" text="Export Data" textFill="WHITE">
                                                    <font>
                                                        <Font name="System Bold" size="14.0" />
                                                    </font>
                                                </Button>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>

                <!-- Table section - This is the main content that should grow -->
                <VBox style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 3);" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Inventory Items" textFill="#334155">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="5.0" />
                            </VBox.margin>
                        </Label>
                        <Label fx:id="itemCountLabel" text="(120 items)" textFill="#64748B">
                            <font>
                                <Font size="14.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </Label>
                        <TableView fx:id="itemTable" style="-fx-background-color: #EDF0F5;" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="itemID" prefWidth="169.5" text="Item ID" />
                                <TableColumn fx:id="itemName" minWidth="0.0" prefWidth="199.0" text="Item Name" />
                                <TableColumn fx:id="supplierName" prefWidth="200.0" text="Supplier Name" />
                                <TableColumn fx:id="createdAt" minWidth="0.0" prefWidth="195.5" text="Created At" />
                                <TableColumn fx:id="lastUpdated" minWidth="0.0" prefWidth="195.5" text="Last Updated" />
                                <TableColumn fx:id="quantity" minWidth="0.0" prefWidth="190.0" text="Quantity" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>
            </children>
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
