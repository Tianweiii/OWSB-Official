<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane fx:id="rootPane"
            prefHeight="137.0"
            prefWidth="611.0"
            style="-fx-background-color: #EDF0F5; -fx-padding: 20;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.salesController.DailyItemSalesController">

   <stylesheets>
      <URL value="@../css/sales-manager.css" />
   </stylesheets>

   <top>
      <VBox spacing="15.0">
         <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fitHeight="32" fitWidth="32" pickOnBounds="true" preserveRatio="true">
               <Image url="@../images/daily-sales.png"/>
            </ImageView>
            <padding>
               <Insets  left="10.0" right="10.0" top="20.0" />
            </padding>
            <Label text="Daily Sales Entry"
                   styleClass="toolbar-title"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2196F3;" />
         </HBox>
         <Label fx:id="subHeadingLabel"
                style="-fx-font-size: 14px; -fx-text-fill: #757575;" />


         <HBox alignment="CENTER_LEFT" spacing="12">
            <Label text="Date:" style="-fx-font-weight: bold;" />
            <DatePicker fx:id="datePicker" prefWidth="140"/>

            <TextField fx:id="searchField"
                       promptText="Search item..."
                       prefWidth="200"
                       styleClass="search-box"/>
            <ToggleButton fx:id="themeToggle" text="ðŸŒ™">
               <tooltip>
                  <Tooltip text="Toggle Dark/Light"/>
               </tooltip>
            </ToggleButton>

            <Label text="Total:" style="-fx-font-weight: bold;" />
            <Label fx:id="totalLabel"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2196F3;" />
         </HBox>

         <HBox alignment="CENTER_RIGHT" spacing="15">
            <Button fx:id="completeSalesReportBtn"
                    text="ðŸ“Š Complete Sales Report"
                    styleClass="btn-primary"
                    prefWidth="190"
                    prefHeight="32">
               <tooltip>
                  <Tooltip text="Generate and finalize sales report for this date"/>
               </tooltip>
            </Button>

            <Button fx:id="deleteAllButton"
                    text="Delete All"
                    styleClass="btn-delete"
                    prefWidth="120"
                    prefHeight="32">
               <tooltip>
                  <Tooltip text="Delete all sales records for selected date"/>
               </tooltip>
            </Button>
         </HBox>

      </VBox>
   </top>

   <center>
      <StackPane fx:id="contentStack" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </padding>
         <ProgressIndicator fx:id="loadingIndicator" visible="false"/>
      </StackPane>
   </center>

   <bottom>
      <HBox spacing="10.0" BorderPane.alignment="CENTER_RIGHT">
         <Button fx:id="addBtn" styleClass="btn-primary" text="+ Add">
            <tooltip>
               <Tooltip text="Add new sales entry"/>
            </tooltip>
         </Button>
         <Button fx:id="editBtn" disable="true" styleClass="btn-secondary" text="âœŽ Edit">
            <tooltip>
               <Tooltip text="Edit selected entry"/>
            </tooltip>
         </Button>
         <Button fx:id="delBtn" disable="true" styleClass="btn-delete" text="ðŸ—‘ Delete">
            <tooltip>
               <Tooltip text="Delete selected entry"/>
            </tooltip>
         </Button>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
