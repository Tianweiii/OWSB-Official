<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<HBox fx:id="salesManagerDashboardPane" styleClass="dashboard-grid"  xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.salesController.DashboardController">
    <stylesheets>
        <URL value="@../css/sales-manager.css" />
    </stylesheets>
    <VBox fx:id="mainContainer" layoutX="53.0" layoutY="16.0" prefHeight="499.0" prefWidth="677.0" spacing="15.0" styleClass="main-container" HBox.hgrow="ALWAYS">
        <HBox fx:id="headerBox" alignment="CENTER_LEFT" spacing="20" styleClass="header-box">
            <Text fx:id="welcomeText" styleClass="welcome-text" text="Welcome back, Sales Manager">
            <font>
               <Font size="18.0" />
            </font></Text>
            <Region HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="btnNotifications" styleClass="icon-button">
                    <graphic>
                        <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                            <Image url="@../images/notification.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Circle fx:id="notificationBadge" radius="5" styleClass="notification-badge" visible="false" />
                <ToggleButton fx:id="themeToggle" styleClass="theme-toggle">
                    <graphic>
                        <Button fx:id="themeIcon" styleClass="theme-icon">
                            <graphic>
                                <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                                    <Image url="@../images/light-mode.png" />
                                </ImageView>
                            </graphic>
                        </Button>
                    </graphic>
                </ToggleButton>
            </HBox>
        </HBox>
        <HBox prefHeight="64.0" prefWidth="677.0" spacing="20" styleClass="kpi-container">
            <VBox styleClass="kpi-card">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <ImageView fitHeight="24" fitWidth="24" preserveRatio="true" styleClass="kpi-icon">
                        <Image url="@../images/money.png" />
                    </ImageView>
                    <VBox>
                        <Label fx:id="lblTotalSales" styleClass="kpi-value" />
                        <Label styleClass="kpi-label" text="Total Sales" />
                    </VBox>
                </HBox>
                <ProgressBar fx:id="salesProgress" styleClass="kpi-progress" />
            </VBox>

            <VBox styleClass="kpi-card">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <ImageView fitHeight="24" fitWidth="24" preserveRatio="true" styleClass="kpi-icon">
                        <Image url="@../images/cart.png" />
                    </ImageView>
                    <VBox>
                        <Label fx:id="lblPendingOrders" styleClass="kpi-value" text="0" />
                        <Label styleClass="kpi-label" text="Pending Orders" />
                    </VBox>
                </HBox>
                <ProgressBar fx:id="ordersProgress" styleClass="kpi-progress" />
            </VBox>

            <VBox styleClass="kpi-card">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <ImageView fitHeight="24" fitWidth="24" preserveRatio="true" styleClass="kpi-icon">
                        <Image url="@../images/warning.png" />
                    </ImageView>
                    <VBox>
                        <Label fx:id="lblLowStock" styleClass="kpi-value" text="0" />
                        <Label styleClass="kpi-label" text="Low Stock Items" />
                    </VBox>
                </HBox>
                <ProgressBar fx:id="stockProgress" styleClass="kpi-progress" />
            </VBox>

            <VBox styleClass="kpi-card">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <ImageView fitHeight="24" fitWidth="24" preserveRatio="true" styleClass="kpi-icon">
                        <Image url="@../images/users.png" />
                    </ImageView>
                    <VBox>
                        <Label fx:id="lblNewSuppliers" styleClass="kpi-value" text="0" />
                        <Label styleClass="kpi-label" text="Active Suppliers" />
                    </VBox>
                </HBox>
                <ProgressBar fx:id="suppliersProgress" styleClass="kpi-progress" />
            </VBox>
        </HBox>
      <VBox prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
         <children>
      
              <HBox spacing="15" styleClass="filter-container">
                  <HBox styleClass="search-box-container" HBox.hgrow="ALWAYS">
                      <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                          <Image url="@../images/search.png" />
                      </ImageView>
                  <TextField fx:id="searchField" prefHeight="25.0" prefWidth="162.0" />
      <!--                <TextField  promptText="Search sales..." styleClass="search-box"/>-->
                  </HBox>
                  
                  <DatePicker fx:id="startDatePicker" promptText="Start Date" styleClass="date-picker" />
                  <DatePicker fx:id="endDatePicker" promptText="End Date" styleClass="date-picker" />
                  
                  <ComboBox fx:id="statusFilter" promptText="Status" styleClass="filter-combo" />
                  <ComboBox fx:id="categoryFilter" promptText="Category" styleClass="filter-combo" />
                  
                  <Button fx:id="btnExport" onAction="#handleExport" styleClass="action-button, export-button" HBox.hgrow="ALWAYS">
                      <graphic>
                          <HBox alignment="CENTER" spacing="5">
                              <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                                  <Image url="@../images/export.png" />
                              </ImageView>
                              <Label text="Export" />
                          </HBox>
                      </graphic>
                  </Button>
                  
                  <Button fx:id="btnRefresh" onAction="#handleRefresh" styleClass="action-button, refresh-button" HBox.hgrow="ALWAYS">
                      <graphic>
                          <HBox alignment="CENTER" spacing="5">
                              <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                                  <Image url="@../images/refresh.png" />
                              </ImageView>
                              <Label text="Refresh" />
                          </HBox>
                      </graphic>
                  </Button>
              </HBox>
      
      
              <HBox spacing="20">
                  <VBox styleClass="chart-container" HBox.hgrow="ALWAYS">
                      <HBox styleClass="chart-header">
                          <Label styleClass="chart-title" text="Sales Trend" />
                          <Region HBox.hgrow="ALWAYS" />
                          <ComboBox fx:id="trendPeriodFilter" promptText="Period" styleClass="chart-filter" />
                      </HBox>
                      <LineChart fx:id="salesTrendChart" legendVisible="false" styleClass="trend-chart">
                          <xAxis>
                              <CategoryAxis label="Date" tickLabelRotation="45" />
                          </xAxis>
                          <yAxis>
                              <NumberAxis fx:id="amountAxis" autoRanging="true" label="Amount ($)" />
                          </yAxis>
                      </LineChart>
                  </VBox>
      
                  <VBox styleClass="chart-container" HBox.hgrow="ALWAYS">
                      <HBox styleClass="chart-header">
                          <Label styleClass="chart-title" text="Product Performance" />
                          <Region HBox.hgrow="ALWAYS" />
                          <ComboBox fx:id="productMetricFilter" promptText="Metric" styleClass="chart-filter" />
                      </HBox>
                      <PieChart fx:id="topProductsChart" legendVisible="true" styleClass="product-chart" VBox.vgrow="ALWAYS" />
                  </VBox>
              </HBox>
      
              <VBox styleClass="table-container">
                  <HBox styleClass="table-header">
                      <Label styleClass="table-title" text="Recent Sales" />
                      <Region HBox.hgrow="ALWAYS" />
                      <ComboBox fx:id="tableViewFilter" promptText="View" styleClass="table-filter" />
                  </HBox>
      
                  <TableView fx:id="salesTable" styleClass="sales-table" VBox.vgrow="ALWAYS">
                      <columns>
                          <TableColumn fx:id="colDate" prefWidth="120" text="Date" />
                          <TableColumn fx:id="colOrderId" prefWidth="100" text="Order ID" />
                          <TableColumn fx:id="colProduct" prefWidth="200" text="Product" />
                          <TableColumn fx:id="colCategory" prefWidth="120" text="Category" />
                          <TableColumn fx:id="colQuantity" prefWidth="100" text="Quantity" />
                          <TableColumn fx:id="colAmount" prefWidth="120" text="Amount" />
                          <TableColumn fx:id="colStatus" prefWidth="100" text="Status" />
                          <TableColumn fx:id="colActions" prefWidth="100" text="Actions" />
                      </columns>
                      <placeholder>
                          <Label styleClass="table-placeholder" text="No sales data available" />
                      </placeholder>
                  </TableView>
      
                  <HBox styleClass="table-footer">
                      <Label fx:id="totalRecordsLabel" styleClass="records-label" />
                      <Region HBox.hgrow="ALWAYS" />
                      <Pagination fx:id="tablePagination" styleClass="table-pagination" />
                  </HBox>
              </VBox>
         </children>
      </VBox>
    </VBox>
</HBox>
